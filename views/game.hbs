<div class="container mt-4">
    <div class="row">
        <div class="col-auto ">
            {{#each question}}
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Question: </h5>
                    <h6 class="card-subtitle mb-2 text-muted"></h6>
                    <class="card-text">

                        <form name='form1' action='/game/Math'method='post'>
                             <label name='questName'>{{this}}</label>
                            <div class="form-group">
                                <input class="form-control" name="inputAnswer" id="inputAnswer"
                                    placeholder="Enter your answer">
                            </div>
                            <button type='submit' class="btn btn-warning">Answer</button>
                        </form>
                
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>